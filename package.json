{
  "name": "epub-tests",
  "version": "1.0.0",
  "description": "Automatic reporting of EPUB 3 testing results",
  "main": "bin/main.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "generate": "./node_modules/ts-node/dist/bin.js src/main.ts",
    "respec": "(cd results/drafts; ../../node_modules/respec/tools/respec2html.js --localhost  -s index.html -o ../index.html; ../../node_modules/respec/tools/respec2html.js --localhost -s tests.html -o ../tests.html)",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w3c/epub-tests.git"
  },
  "author": "Ivan Herman, Dan Lazin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/w3c/epub-tests/issues"
  },
  "homepage": "https://github.com/w3c/epub-tests#readme",
  "dependencies": {
    "@types/node": "^16.9.4",
    "@types/xml2js": "^0.4.9",
    "respec": "^26.13.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0"
  }
}
